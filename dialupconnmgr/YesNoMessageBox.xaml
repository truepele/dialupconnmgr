<Window x:Class="dialupconnmgr.YesNoMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock FontSize="20" Grid.Row="0" x:Name="TextTB" Text="text" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button IsDefault="true" Margin="5" FontSize="18" Width="50" Content="Yes" Click="ButtonYes_OnClick"></Button>
                <Button IsCancel="True" Margin="5" FontSize="18" Width="50" Content="No" Click="ButtonNo_OnClick"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
